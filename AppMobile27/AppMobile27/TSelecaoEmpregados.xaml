<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile27.TSelecaoEmpregados"
             BackgroundImage="fundo">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Seleção de Empregado"
                   HorizontalOptions="Center"
                   Margin="10,20,10,20"
                   FontSize="30"
                   TextColor="#0DFFBB"/>

            <StackLayout Orientation="Horizontal">
                <TimePicker TextColor="White"
                            HorizontalOptions="Fill"
                            Margin="10,0,10,0"/>
                <Picker x:Name="pickerEmpregado"
                        Title="Selecione o Empregado(a)">
                    <Picker.Items>
                        <x:String></x:String>
                        
                    </Picker.Items>
                    
                </Picker>
                
            </StackLayout>
            <Label x:Name="labelSobre"
                   Margin="10,50,50,10"
                   HorizontalOptions="FillAndExpand"
                   FontSize="19"
                   TextColor="Black"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>